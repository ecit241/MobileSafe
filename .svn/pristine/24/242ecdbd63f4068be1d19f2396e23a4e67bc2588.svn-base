<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.android.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.android.ui.SettingItemView
        custom:title="是否检测更新"
        custom:desc_on="自动更新已开启"
        custom:desc_off="自动更新已关闭"
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
    </com.android.ui.SettingItemView>
    

    <com.android.ui.SettingItemView
        android:id="@+id/siv_show_address"
        custom:title="归属地显示"
        custom:desc_on="号码归属地显示已开启"
        custom:desc_off="号码归属地显示已关闭"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
    </com.android.ui.SettingItemView>
    
    
    <com.android.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
    </com.android.ui.SettingClickView>
    
    <com.android.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        custom:title="黑名单拦截状态"
        custom:desc_on="黑名单拦截已开启"
        custom:desc_off="黑名单拦截已关闭"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
    </com.android.ui.SettingItemView>

</LinearLayout>